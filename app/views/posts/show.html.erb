<h1><%= @post.title %></h1>
<div class="row">
    <div class="col-md-8">
        <p><%= @post.body %></p>
        <h4 class="media-heading">
            Comments
        </h4>
        <% @post.comments.each do |comment| %>
        <div class="media">
            <div class="media-body">
                <p><em><%= comment.body %></em></p>
                <small>
                    submitted <%= time_ago_in_words(comment.created_at) %> ago
                </small>
            </div>
        </div>
        <hr>
        <% end %>
    </div>
    <div class="col-md-4">
        <%= link_to "Edit", edit_topic_post_path(@post.topic, @post), class: "btn btn-success" %>
        <%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this post?" } %> 
    </div>
</div>