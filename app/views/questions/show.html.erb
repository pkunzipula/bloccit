<h1><%= @question.title %></h1>
<div class="row">
    <div class="col-md-8">
        <%= @question.body %>
    </div>
    <div class="col-md-4">
        <%= link_to "Edit", edit_question_path(@question), class: "btn btn-success" %>
        <%= link_to "Delete Question", @question, method: :delete, class: "btn btn-danger", data: { confirm: "I gotta question for you: Are. You. Sure?" } %>
    </div>
</div>

