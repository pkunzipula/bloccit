<h1><%= @advertisement.title %></h1>
<div class="row">
    <div class="col-md-8">
        <p><%= @advertisement.copy %></p>
        <p>Price: $<%= @advertisement.price %></p>
    </div>
    <div class="col-md-4">
        <%= link_to "Edit", edit_advertisement_path(@advertisement), class: "btn btn-success" %>
        <%= link_to "Delete Ad", @advertisement, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want this Ad to be gone?" } %>
    </div>
</div>

