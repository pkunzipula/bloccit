<h1>Edit Sponsored Post</h1>

<div class="row">
    <div class="col-md-4">
        <p>Guidelines for Sponsored Posts</p>
        <ul>
            <li>Just kidding.</li>
            <li>Go crazy.</li>
        </ul>
    </div>
    <div class="col-md-8">
        <%= form_for @sponsoredpost do |f| %>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control", placeholder: "Enter a title for this sponsored post" %>
            </div>
            <div class="form-group">
                <%= f.label :body %>
                <%= f.text_area :body, rows: 8, class: "form-control", placeholder: "Enter your sponsored post" %>
            </div>
            <div class="form-group">
                <%= f.label :price %>
                <%= f.number_field :price, class: "form-control", placeholder: "Enter a price" %>
            </div>
            <div class="form-group">
                <%= f.submit "Save", class: "btn btn-success" %>
            </div>
        <% end %>
    </div>
</div>