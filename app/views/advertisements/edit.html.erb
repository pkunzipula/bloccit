<h1>Edit Ad</h1>

<div class="row">
    <div class="col-md-4">
        <p>Guidelines for Ads</p>
        <ul>
            <li>Just kidding.</li>
            <li>Go crazy.</li>
        </ul>
    </div>
    <div class="col-md-8">
        <%= form_for @advertisement do |f| %>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title,class: "form-control", placeholder: "Enter a title" %>
        </div>
        <div class="form-group">
            <%= f.label :copy %>
            <%= f.text_area :copy, rows: 8, class: "form-control", placeholder: "Enter some body copy" %>
        </div>
        <div class="form-group">
            <%= f.label :price %>
            <%= f.number_field :price, class: "form-control", placeholder: "Enter a price" %>
        </div>
        <div class="form-group">
            <%= f.submit "Save", class: "btn btn-success" %>
        </div>
        <% end %>
    </div>
</div>
